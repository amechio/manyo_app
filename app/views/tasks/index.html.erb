<h1>一覧画面</h1>
<p><%= notice %></p>
<table>
  <tr>
    <th>タスク名</th>
    <th>タスク詳細</th>
  </tr>
<% @tasks.each do |task| %>
  <tr>
    <td><%= task.title %></td>
    <td><%= task.content %></td>
    <td><%= link_to '詳細', task_path(task.id) %></td>
    <td><%= link_to '削除', task_path(task.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %></td>
  </tr>
<% end %>
</table>

<%= link_to '新規作成', new_task_path %>
