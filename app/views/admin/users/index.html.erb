<h1>管理者画面index</h1>
<%= link_to 'ユーザの新規登録', new_admin_user_path, class: "btn" %>

<% @users.each do |user| %>
  <%= user.id %>:<%= user.name %>(<%= current_user.tasks.count %>個のタスク)
  <%= link_to '詳細', admin_user_path(user.id), class: "option_btn", id: "show" %>
  <%= link_to '編集', edit_admin_user_path(user.id), class: "option_btn", id: "edit" %>
  <%= link_to '削除', admin_user_path(user.id), method: :delete ,data: { confirm: '本当に削除していいですか？' }, class: "option_btn", id: "delete" %>
<% end %>
